<?xml version='1.0' encoding='utf-8'?>
<widget id="com.moimob.billplanner" version="1.10.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Monthly Bill Planner</name>
    <description>
        Organize bills and plan your future expenses
    </description>
    <author email="ajacobsson98@gmail.com" href="https://ajacobsson.com">
        Anton Jacobsson
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="www/icons/bill_icon.png" platform="android" qualifier="mdpi"/>
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="29" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>